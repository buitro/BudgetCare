<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/expenses_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/expenses_item_name"
        android:layout_centerInParent="true"
        android:text="TextView"
        android:textSize="10sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/expenses_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/expenses_item_currency"
        android:paddingLeft="@dimen/padding_expandable_name"
        android:text="TextView" />

    <TextView
        android:id="@+id/expenses_item_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/expenses_item_balance"
        android:text="@string/group_currency" />

    <TextView
        android:id="@+id/expenses_item_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="0.0" />
</RelativeLayout>